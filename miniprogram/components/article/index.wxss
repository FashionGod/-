/* components/article/index.wxss */

.body {
  box-shadow: 8rpx 8rpx 8rpx rgba(114, 130, 138, 0.2);
  background-color: white;
  padding: 20rpx;
  border-radius: 6rpx;
}

.body swiper {
  border-radius: 6rpx;
}

.body swiper swiper-item {
  border-radius: 6rpx;
}

.body swiper swiper-item image {
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
}

.title {
  margin-top: 10rpx;
  font-weight: bold;
}

.introduce {
  margin-top: 10rpx;
  font-size: 26rpx;
  min-height: 135rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.introduce.text-hidden {
  -webkit-line-clamp: 4;
}

.introduce.text-show {
  -webkit-line-clamp: 0;
}

.arrow {
  text-align: center;
  z-index: 10000;
}

.arrow-up {
  width: 10px;
  height: 10px;
  border-top: 1px solid #999;
  border-right: 1px solid #999;
  transform: rotate(-45deg);
}

.arrow-down {
  width: 10px;
  height: 10px;
  border-top: 1px solid #999;
  border-right: 1px solid #999;
  transform: rotate(135deg);
}

.comment {
  margin-top: 10rpx;
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background-color: #f6f6f6;
  padding: 10rpx;
  border-radius: 6rpx;
}

.commentContent {
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  background-color: yellow;
  padding: 5rpx;
  border-radius: 6rpx;
  padding-right: 6rpx;
}

.icon image {
  width: 40rpx;
  height: 40rpx;
}

.icon view {
  font-size: 28rpx;
}

.avatar {
  width: 48rpx;
  height: 48rpx;
  margin-left: 10rpx;
  border-radius: 48rpx;
  border: 0.5rpx solid gray;
  flex-shrink: 0;
}

.content {
  display: flex;
  flex-direction: row;
  margin-left: 10rpx;
  font-size: 32rpx;
}

.content .tex_1 {

  max-width: 130rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.content .tex_2 { 

  max-width: 315rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.likeCount {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  font-size: 24rpx;
  color: gray;
  margin: 5rpx;
  margin-right: 10rpx;
}

.line {
  margin-top: 10rpx;
  display: flex;
  font-size: 28rpx;
}

.line image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 5rpx;
}

.item {
  margin-right: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
