.lists {
  background: #fff;
}

.lists .item {
  display: flex;
  align-items: center;
  position: relative;
  padding: 20rpx;
  border-bottom: 1rpx solid gainsboro;
}

.item image {
  width: 48rpx;
  height: 48rpx;
  margin-left: 30rpx;
}

.item text {
  font-size: 35rpx;
  margin-left: 20rpx;
}

.arrow {
  position: absolute;
  right: 50rpx;
  width: 10px;
  height: 10px;
  border-top: 1px solid #999;
  border-right: 1px solid #999;
  transform: rotate(45deg);
}
